{
  "manifest_version": 3,
  "name": "BSG",
  "version": "0.1.0",
  "permissions": ["storage", "scripting"],
  "host_permissions": ["http://localhost:3000/*"],
  "action": {
    "default_title": "the injectornator"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://localhost:3000/*"],
      "js": ["content.js"]
    }
  ]
}
