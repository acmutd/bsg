{
  "manifest_version": 3,
  "name": "BSG",
  "version": "1.0.0",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "identity",
    "storage"
  ],
  "oauth2": {
    "client_id": "497587004129-53bvvo3kf0naps52sst90f03fe168dc4.apps.googleusercontent.com",
    "scopes": [
      "openid",
      "email",
      "profile"
    ]
  },
  "host_permissions": [
    "https://leetcode.com/*",
    "https://*.leetcode.com/*",
    "https://*.googleapis.com/*",
    "https://accounts.google.com/*",
    "http://localhost:3000/*"
  ],
  "action": {
    "default_popup": "defaultPopup.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; script-src-elem 'self' https://apis.google.com https://accounts.google.com; object-src 'self';"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "defaultPopup.html",
        "next/*",
        "logIn.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "*://leetcode.com/problems/*",
        "*://*.leetcode.com/problems/*"
      ],
      "js": [
        "contentScript.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
